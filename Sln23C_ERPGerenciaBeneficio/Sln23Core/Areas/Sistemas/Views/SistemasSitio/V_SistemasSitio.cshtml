@{
    ViewBag.Title = "Sln23C | Bienvenido";
    Layout = "~/Areas/Sistemas/Views/MPSistemasSitio.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            PANEL DE CONTROL 23C
            <small>Seguridad</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-shared"></i> Sistemas</a></li>
            <li class="active">Panel de control</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Grupo de Estados</h3>
                    </div>
                    <form class="form-horizontal">
                        <div class="box-body">

                            <div class="form-group">
                                <div class="col-sm-4">
                                    <label for="lbl_vc_grup_stnd_codi">Código</label>
                                    <input type="text" class="form-control" id="vc_grup_stnd_codi">
                                </div>
