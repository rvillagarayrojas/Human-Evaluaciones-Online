                                    <label for="lbl_vc_grup_stnd_nomb">Nombre</label>
                                    <input type="text" class="form-control" id="vc_grup_stnd_nomb">
                                </div>
                                <div class="col-sm-4">
                                    <label for="lbl_tx_grup_stnd_desc">Descripción</label>
                                    <input type="text" class="form-control" id="tx_grup_stnd_desc">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-4">
                                    <label for="lbl_nu_grup_stnd_iden_inic">Idn inicial</label>
                                    <input type="text" class="form-control" id="nu_grup_stnd_iden_inic">
                                </div>
                                <div class="col-sm-4">
                                    <label for="lbl_nu_grup_stnd_iden_finl">Idn Final</label>
                                    <input type="text" class="form-control" id="nu_grup_stnd_iden_finl">
                                </div>
                            </div>

                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-default">Volver</button>
                            <button type="submit" class="btn btn-info pull-right">Guardar</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
</div>
